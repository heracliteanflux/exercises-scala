<?xml version="1.0"?>

<!-- the default Hadoop configuation for the default file system and the local, in-JVM framework for running MapReduce jobs -->
<configuration>

  <property>
	  <name>fs.defaultFS</name>
		<value>file:///</value>
	</property>

	<property>
	  <name>mapreduce.framework.name</name>
		<value>local</value>
	</property>

</configuration>