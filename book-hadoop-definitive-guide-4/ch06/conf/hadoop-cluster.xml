<?xml version="1.0"?>

<!-- points to a namenode and a YARN resource manager both running on a cluster -->
<configuration>

  <property>
	  <name>fs.defaultFS</name>
		<value>hdfs://namenode/</value>
	</property>

	<property>
	  <name>mapreduce.framework.name</name>
		<value>yarn</value>
	</property>

	<property>
	  <name>yarn.resourcemanager.address</name>
		<value>resourcemanager:8032</value>
	</property>

</configuration>